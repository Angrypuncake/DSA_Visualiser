<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
      fx:controller="visualizer.controller.VisualizerController"
      fx:id="root"
      alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;">

    <!-- ComboBox for selecting sorting strategy -->
    <ComboBox fx:id="strategySelector" prefWidth="150"/>

    <!-- Buttons -->
    <Button fx:id="randomizeButton" text="Randomize" prefWidth="100"/>
    <Button fx:id="sortButton" text="Sort" prefWidth="100"/>
</VBox>
